@model ZKEACMS.Common.Models.StyleSheetWidget
@if (Model.StyleSheet.IsNullOrEmpty())
{
    return;
}
@if (Model.StyleSheet.Contains("<link", StringComparison.OrdinalIgnoreCase) || Model.StyleSheet.Contains("<style", StringComparison.OrdinalIgnoreCase))
{
    using (Style.AtHead())
    {
        @Html.Raw(Model.StyleSheet)
    }
}
else
{
    using (Style.AtHead())
    {
        <style>
            @Html.Raw(Model.StyleSheet)
        </style>
    }
}

@if (this.WorkContext().IsDesignMode)
{
    <pre class="code" code="CSS">@L("Custom Style")</pre>
}